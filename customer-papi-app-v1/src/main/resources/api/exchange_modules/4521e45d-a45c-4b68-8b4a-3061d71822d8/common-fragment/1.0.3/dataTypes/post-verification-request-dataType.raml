#%RAML 1.0 DataType

type: object
properties:
  verificationRequest:
    type: object
    properties:
      contactType: 
        type: string
        required: true
        enum:
          - "mobile"
          - "email"
        example: "mobile"
      countryCode: 
        type: string
        required: false
        enum:
          - "+91"
          - "+1"
        example: "+91"
      mobile:
        type: string
        required: false
        example: "73746337467"
      email:
        type: string
        required: false
        example: "kumar@gmail.com"                                 
      messageContent:
        type: string
        required: true
        example: "BChzxbvzdfisd7yvwegrfwiearusdb"         